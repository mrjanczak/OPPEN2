$('#doc_list_Year').change(function(e) {
	var year_id  = $(this).find('option:selected').val();
	$.ajax({
		type: "POST",
		url: $(this).parents('.filter').data('url-year').replace(/__year_id__/g, year_id),
		success: function(data){
			console.log( JSON.stringify(data) );
			$('#doc_list_Month option').remove();
			$('#doc_list_Month').append( data[0].join());
			$('#doc_list_DocCat option').remove();
			$('#doc_list_DocCat').append( data[1].join());
		}
	});
});

$('#doc_list_Month').change(function(e) {
	var month_id  = $(this).find('option:selected').val();
	$.ajax({
		type: "POST",
		url: $(this).parents('.filter').data('url-month').replace(/__month_id__/g, month_id),
		success: function(data){
			console.log( JSON.stringify(data) );
			$('#doc_list_DocCat option').remove();
			$('#doc_list_DocCat').append( data[0].join());
		}
	});
	
});




